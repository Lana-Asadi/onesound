<section class="product-page">

  <div class="product-media">
    <img src="{{ product.featured_image | image_url: width: 1200 }}">
  </div>

  <div class="product-info">
    <h1>{{ product.title }}</h1>

    <div class="price">
      {{ product.price | money }}
    </div>

    <p class="description">
      {{ product.description }}
    </p>

    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

      <button type="submit" class="buy-button">
        Add to Cart
      </button>
    </form>

    <div class="trust">
      <p>Free shipping</p>
      <p>30-day returns</p>
      <p>Secure checkout</p>
    </div>

  </div>

</section>

<section class="os-product">
  <div class="os-product__media">
    <video autoplay muted loop playsinline class="os-product__video">
      <source src="{{ product.media.first | media_url }}" type="video/mp4">
    </video>
  </div>

  <div class="os-product__info">
    <h1>{{ product.title }}</h1>
    <p class="os-product__price">{{ product.price | money }}</p>

    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
      <button type="submit" class="os-btn">Add to Cart</button>
    </form>

    <div class="os-product__desc">
      {{ product.description }}
    </div>
  </div>
</section>

